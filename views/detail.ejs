<%- include('./partials/head') -%>
<div class="container d-flex flex-row flex-wrap justify-content-center align-items-center" style="height: 100vh;">
    <form action="/student/updating/<%= student._id %>" method="post" style="width: 20rem">
        <label class="form-label" for="name">Nome</label>
        <input class="form-control mb-2" type="text" id="name" name="name" required pattern="[a-zA-Z]{3,20}" value="<%= student.name %>">
        <label class="form-label" for="surname">Cognome</label>
        <input class="form-control mb-2" type="text" id="surname" name="surname" required pattern="[a-zA-Z]{3,20}" value="<%= student.surname %>">
        <label class="form-label" for="media">Media</label>
        <input class="form-control mb-5" id="media" name="media" type="number" required pattern="[0-9]+([\.,][0-9]+)?" min="0" max="10" step="0.01" value="<%= student.media %>">

        <div class="d-flex align-items-center justify-content-between">
            <button class="btn btn-primary" onclick="validate()">Salva<i class="fas fa-save ms-2"></i></button>
            <button class="btn btn-outline-danger" formaction="/student/removing/<%= student._id %>" formmethod="post">Rimuovi<i class="fas fa-trash-alt ms-2"></i></button>
        </div>
    </form>
</div>
<%- include('./partials/tail') -%>